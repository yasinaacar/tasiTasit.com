<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body>
    <%- include('../../partials/navbar') %>


    <div class="container mt-5">
        <div class="row">
            <%- include('../../partials/alert') %>
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <h4 class="text-center mb-5"><%= title %></h4>
                    <div class="col-md-12">
                        <div class="mb-3 row">
                            <label for="image" class="col-sm-2 col-form-label">Kargo Resmi:</label>
                            <div class="col-sm-2">
                                <img src="/static/images/" alt="" id="previewImg" style="width: 200px;">
                            </div>
                            <div class="col-sm-7">
                                <input type="file" class="form-control" id="image" name="cargoImg">
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-danger" id="removeImgBtn" disabled>Kaldır</button>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="weight" class="col-sm-2 col-form-label">Kilo:</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="weight" name="weight" value="0" step="0.1">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="horizontalHeight" class="col-sm-2 col-form-label">Uzunluk (Yatay):</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="horizontalHeight" name="horizontalHeight" value="0" step="0.1">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="verticalHeight" class="col-sm-2 col-form-label">Uzunluk: (Dikey)</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="verticalHeight" name="verticalHeight" value="0" step="0.1">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="cargoType" class="col-sm-2 col-form-label">Kargo Türü:</label>
                            <div class="col-sm-10 d-flex">
                                <select class="form-select" name="cargoType">
                                    <option selected value="-1">Seçilmedi</option>
                                    <% cargoTypes.forEach(cargoType => { %>
                                        <option value="<%= cargoType.id %>"><%= cargoType.cargoTypeName %></option>
                                    <% }) %>
                                  </select>
                            </div>
                        </div>
                        <div class="mb-3  text-center">
                            <button type="submit" class="btn btn-primary px-5">Sonraki</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/script') %>
    <script src="/static/js/imagePrev.js"></script>

</body>
</html>