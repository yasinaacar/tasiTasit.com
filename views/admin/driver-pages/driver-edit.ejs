<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body>
    <%- include('../../partials/navbar') %>


    <div class="container mt-5">
        <div class="row">
            <%- include('../../partials/alert') %>
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-10">
                        <div class="mb-3 row">
                            <label for="driverImg" class="col-sm-2 col-form-label">Şoför Resmi:</label>
                            <img src="/static/images/<%= driver.driverImg %>" alt="<%= driver.driverImg %>" class="col-sm-2">
                            <div class="col-sm-8">
                            <input type="file" class="form-control" id="driverImg" name="driverImg">
                            <input type="hidden" class="form-control" name="driverImg" value="<%= driver.driverImg %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="fullname" class="col-sm-2 col-form-label">Ad Soyad:</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="fullname" name="fullname" value="<%= driver.fullname %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="phone" class="col-sm-2 col-form-label">Telefon Numarası:</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="phone" name="phone" value="<%= driver.phone %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="email" class="col-sm-2 col-form-label">E-Posta:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" name="email"  value="<%= driver.email %>">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="gender" class="col-sm-2 col-form-label">Cinsiyet:</label>
                            <div class="col-sm-10 d-flex">
                                <select class="form-select" name="gender">
                                    <option value="true" <%= driver.gender == true ? "selected" : "" %>>Erkek</option>
                                    <option value="false" <%= driver.gender == false ? "selected" : "" %>>Kadın</option>
                                  </select>
                            </div>
                        </div>
                        <div class="mb-3  text-center">
                             <input type="hidden" name="driverId" value="<%= driver.id %>">
                             <input type="hidden" name="driverUrl" value="<%= driver.url %>">
                            <button type="submit" class="btn btn-primary px-5">Ekle</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/script') %>
</body>
</html>