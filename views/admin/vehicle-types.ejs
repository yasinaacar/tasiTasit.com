<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/alert') %>

        <!-- add-vehicle type -->
        <div class="create-vehicleType">
            <div class="container">
                <div class="forms">
                    <div class="card" id="card">
                        <div class="card-body">
                            <form action="/admin/vehicle-type/create" method="post">
                                <div class="row">
                                    <div class="col-12">
                                        <input type="text" class="form-control text-center" name="vehicleTypeName" placeholder="Araç Türünü Girin">
                                    </div>
                                </div>
                                <div class="row">  
                                    <button type="submit" class="button px-5 view">Ekle</button>
                                </div>
                            </form>
        
                            
        
                            <!-- <div class="button arrow-button d-flex align-items-center justify-content-center mt-5"> 
                                <i class="bi bi-arrow-down view" style="font-size: 2rem; color: black !important;" id="arrowDown"></i>
                                <i class="bi bi-arrow-up" style="font-size: 2rem; color: black !important;" id="arrowUp"></i>
                            </div> -->
                        </div>               
                    </div>
                </div>
            </div>
        </div>
        
        <!-- vehicle-types-table -->
        <div class="container">
            <div class="forms">
                <div class="card">
                    <div class="card-body">
                        <!-- Table -->
                        <div class="table-responsive" id="table-responsive">
                            <table class="table table-hover table-striped  table-light mt-5" id="table">
                                <thead class="table-primary">
                                        <th>ID</th>
                                        <th>Araç Türü</th>
                                        <th>Kayıtlı Araç Sayısı</th>
                                        <th style="width: 200px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% vehicleTypes.forEach(vehicleType => { %>
                                        <tr>
                                            <td class="left-text"><%= vehicleType.vehicleTypeCode%></td>
                                            <td class="left-text"><%= vehicleType.vehicleTypeName %></td>
                                            <td class="left-text"><%= vehicleType.vehicles.length %></td>
                                            <td>
                                                <div class="btns">
                                                    <a href="/admin/vehicle-type/edit/<%= vehicleType.url %>" class="btn edit"><i class="bi bi-pencil-square"></i></a>
                                                    <!-- update-vehicle-type-panel -->
                                                    <a href="/admin/vehicle-type/delete/<%= vehicleType.id %>" class="btn delete" data-bs-toggle="modal" data-bs-target="#modal_<%= vehicleType.id %>"><i class="bi bi-trash"></i></a>
                                                    <!-- delete-vehicle-type-panel -->
                                                    <div class="modal fade" id="modal_<%= vehicleType.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">... Plakalı aracı silmek üzeresiniz</h1>
                                                                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                                                                </div>
                                                                <div class="modal-body table-responsive">
                                                                    <table class="table table-striped table-hover table-light table-bordered mt-5">
                                                                        <thead class="table-primary">
                                                                            <tr>
                                                                                <th>ID</th>
                                                                                <th>Araç Türü</th>
                                                                                <th>Araç Sayısı</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <tr>
                                                                                <td class="data"><%= vehicleType.vehicleTypeCode%></td>
                                                                                <td class="data"><%= vehicleType.vehicleTypeName %></td>
                                                                                <td class="data">0</td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="button px-5" data-bs-dismiss="modal">Close</button>
                                                                    <form action="/admin/vehicle-type/delete/<%= vehicleType.id %>" method="post">
                                                                        <input type="hidden" name="vehicleTypeId" value="<%= vehicleType.id%>">
                                                                        <button type="submit" class="btn delete"><i class="bi bi-trash"></i></button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <%- include('../partials/script') %>
</body>
</html>