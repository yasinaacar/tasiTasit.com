<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <div class="row mt-5">
            <%- include('../partials/alert') %>
            <div class="col-md-12">
                <!-- add-vehicle type -->
                <div class="create-vehicleType">
                    <div class="card">
                        <div class="card-header bg-secondary">Araç Türü Oluştur</div>
                        <div class="card-body">
                          <div class="row d-flex justify-content-center">
                            <form action="/admin/vehicle-type/create" method="post">
                                <div class="col-auto mb-2">
                                  <input type="text" class="form-control" name="vehicleTypeName" placeholder="Araç Türünü Girin">
                                </div>
                                <div class="col-auto mb-2">
                                  <button type="submit" class="btn btn-success px-4">Add</button>
                                </div>
                            </form>
                          </div>
                        </div>
                      </div>
                </div>
                <!-- vehicle-types-table -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered mt-5">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Araç Türü</th>
                                <th>Kayıtlı Araç Sayısı</th>
                                <th style="width: 200px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% vehicleTypes.forEach(vehicleType => { %>
                                <tr>
                                    <td><%= vehicleType.vehicleTypeCode%></td>
                                    <td><%= vehicleType.vehicleTypeName %></td>
                                    <td><%= vehicleType.vehicles.length %></td>
                                    <td><%= vehicleType.url %></td>
                                    <td>
                                        <div class="btns">
                                            <a href="/admin/vehicle-type/edit/<%= vehicleType.url %>" class="btn btn-primary btn-sm">Düzenle</a>
                                            <!-- update-vehicle-type-panel -->
                                            <a href="/admin/vehicle-type/delete/<%= vehicleType.id %>" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modal_<%= vehicleType.id %>">Sil</a>
                                            <!-- delete-vehicle-type-panel -->
                                            <div class="modal fade" id="modal_<%= vehicleType.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                          <h1 class="modal-title fs-5" id="exampleModalLabel">Araç Türü Sil</h1>
                                                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body table-responsive">
                                                            <table class="table table-striped table-hover table-bordered mt-5">
                                                                <thead>
                                                                    <tr>
                                                                        <th>#ID</th>
                                                                        <th>Araç Türü</th>
                                                                        <th>Araç Sayısı</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td><%= vehicleType.vehicleTypeCode%></td>
                                                                        <td><%= vehicleType.vehicleTypeName %></td>
                                                                        <td>0</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                        <div class="modal-footer">
                                                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <form action="/admin/vehicle-type/delete/<%= vehicleType.id %>" method="post">
                                                                <input type="hidden" name="vehicleTypeId" value="<%= vehicleType.id %>">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
</body>
</html>