<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body>
    <%- include('../../partials/navbar') %>


    <div class="container mt-5">
        <div class="row">
            <%- include('../../partials/alert') %>
            <form method="post">
                <div class="row">
                    <div class="col-md-10">
                        <div class="mb-3 row">
                            <label for="title" class="col-sm-2 col-form-label">İlan Başlığı:</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="title" name="title" placeholder="Bursa-İstanbul Kolili Ürün">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="editor" class="col-sm-2 col-form-label">İlan Açıklaması:</label>
                            <div class="col-sm-10">
                              <textarea type="text" class="form-control" id="editor" name="description" style="width: 100% ;" rows="3" placeholder="İlan hakkında detay ekle" maxlength="200"></textarea>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <h6>Teslim Tarihi Aralığını Seçin</h6>
                            <hr>
                            <div class="col-md-5">
                                <label for="startDate" class="form-label">Başlangıç:</label>
                                <input type="date" class="form-control" id="startDate" name="startDate">
                            </div>
                            <div class="col-md-5">
                                <label for="endDate" class="form-label">Bitiş:</label>
                                <input type="date" class="form-control" id="endDate" name="endDate">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="row mb-3">
                                <h3 class="text-center mb-4">Başlangıç noktası Seçin</h3>
                            <hr>
                            <div class="col-md-6">
                                <div class="col-sm-10 d-flex">
                                    <select class="form-select" name="startProvince" id="startProvince">
                                        <option value="-1" selected>Şehir Seçin</option>
                                        <% provinces.forEach(province => { %>
                                            <option value="<%= province.id %>"><%= province.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <p class="text-danger">*Zorunlu alan</p>

                            </div>
                            <div class="col-md-6">
                                <div class="col-sm-10 d-flex">
                                    <select class="form-select" name="startDistrict" id="startDistrict">
                                    </select>
                                </div>
                                <p class="text-danger">*Zorunlu alan</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <h3 class="text-center mb-4">Bitiş noktası Seçin</h3>
                            <hr>
                            <div class="col-md-6">
                                <div class="col-sm-10 d-flex">
                                    <select class="form-select" name="finishProvince" id="finishProvince">
                                        <option value="-1" selected>Şehir Seçin</option>
                                        <% provinces.forEach(province => { %>
                                            <option value="<%= province.id %>"><%= province.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <p class="text-danger">*Zorunlu alan</p>

                            </div>
                            <div class="col-md-6">
                                <div class="col-sm-10 d-flex">
                                    <select class="form-select" name="endDistrict" id="endDistrict">
                                    </select>
                                </div>
                                <p class="text-danger">*Zorunlu alan</p>

                            </div>
                        </div>
                        <div class="mb-3  text-center">
                            <button type="submit" class="btn btn-primary px-5">Yayınla</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/script') %>
    <%- include('../../partials/ckEditor') %>
    <!--to get district associated with province when the province is selected-->
    <script src="/static/js/provinceDistrictSelector.js"></script> 
    <!--set default values for date when page loads-->
    <script src="/static/js/setDefaultForDate.js"></script> 

</body>
</html>