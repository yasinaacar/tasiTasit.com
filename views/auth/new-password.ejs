<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/navbar') %>
    
    <div class="container mt-5">
    <%- include('../partials/alert') %>
        
    </div>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="row w-75">
            <div class="col-12">
              <div class="card generatorCard">
                <div class="card-header">
                    <h5 class="text-green text-center"><i class="fa-solid fa-right-to-bracket me-2"></i>New Password</h5>
                </div>
                <form method="post" style="padding: 10px;">
                    <div class="row mb-3">
                        <label for="password" class="ms-2 col-sm-2">Password :</label>
                        <div class="col-sm-10 offset-sm-1">
                            <input type="password" name="password" class="form-control" id="password">
                        </div>
                    </div>   
                    <div class="row mb-3 mt-5">
                        <div class="col-sm-8 offset-sm-2 d-flex justify-content-center">
                          <button type="submit" class="btn btn-danger" id="updatePassword">Update</button>
                        </div>
                    </div>
                </form>
              </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>